# LINE Bot設定
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_CHANNEL_SECRET=your_channel_secret_here

# Notion設定
NOTION_TOKEN=ntn_xxxxxxxxxxxx
NOTION_DATABASE_ID=your_database_id_here
# Data Source IDはAPI-retrieve-a-databaseで取得できます
NOTION_DATA_SOURCE_ID=your_data_source_id_here

# Tavily Search API設定（検索機能用）
# https://tavily.com/ で無料アカウント作成後、APIキーを取得
TAVILY_API_KEY=tvly-xxxxxxxxxxxxxxxx

# AWS設定（Bedrock用）
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# AgentCore Memory設定（オプション：会話履歴を保持する場合に設定）
# agentcore memory create コマンドでMemoryリソースを作成後、IDを設定
# AGENTCORE_MEMORY_ID=mem-xxxxxxxxxxxxxxxx
# AGENTCORE_REGION=us-east-1
